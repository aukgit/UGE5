@model IEnumerable<UGE.Models.DataStructure.Chapter>

@{
    ViewBag.Title = "Chapter";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalArticles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MasterArticleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.BookName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TopicName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalArticles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MasterArticleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Book.BookName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ChapterID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ChapterID }, new {  onclick="return confirm('Are you sure?')" })
        </td>
    </tr>
}

</table>
