@model IEnumerable<UGE.Models.DataStructure.MCQ>

@{
    ViewBag.Title = "MCQ";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article.ArticleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayQuestion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Article.ArticleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MCQID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MCQID }, new {  onclick="return confirm('Are you sure?')" })
        </td>
    </tr>
}

</table>
